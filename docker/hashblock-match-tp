FROM python:3 as base

RUN mkdir -p builder && \
	pip3 install \
		sawtooth-sdk \
		grpcio-tools \
		grpcio && \
	rm -rf /var/lib/apt/lists/*

WORKDIR builder

COPY bin bin
COPY cli cli
COPY protos protos
COPY families families

RUN bin/protogen && \
	pip3 uninstall -y grpcio grpcio-tools

WORKDIR .

FROM base as clean

RUN mkdir -p /project/hashblock-exchange && \
  mkdir -p /project/hashblock-exchange/bin && \
  mkdir -p /project/hashblock-exchange/families/match && \
  mkdir -p /var/log/sawtooth

WORKDIR /project/hashblock-exchange

COPY --from=base builder/bin/match-tp bin
COPY --from=base builder/families/match/hashblock_match families/match/hashblock_match

RUN rm -rf /builder

FROM clean as final

ENV PATH $PATH:/project/hashblock-exchange/bin
